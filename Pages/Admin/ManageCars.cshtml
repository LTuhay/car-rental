@page
@model Car_rental.Pages.Admin.ManageCarsModel
@{
    ViewData["Title"] = "Manage Cars";
}

<h2>Manage Cars</h2>

<a asp-page="/Admin/AddCar">Add New Car</a>

<table>
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price Per Day</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.PricePerDay</td>
                <td>@car.Location</td>
                <td>
                    <a asp-page="/Admin/EditCar" asp-route-id="@car.CarId">Edit</a> |
                    <a asp-page="/Admin/DeleteCar" asp-route-id="@car.CarId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
