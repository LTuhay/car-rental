@page "{id:int}"
@model Car_rental.Pages.Admin.DeleteCarModel
@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<p>Are you sure you want to delete this car?</p>

<form method="post">
    <input type="hidden" asp-for="Car.CarId" />
    <button type="submit">Delete</button>
    <a asp-page="/Admin/ManageCars">Cancel</a>
</form>
