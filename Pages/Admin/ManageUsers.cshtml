@page
@model Car_rental.Pages.Admin.ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

@if (Model.Users != null && Model.Users.Any())
{
    <table>
        <thead>
            <tr>
                <th>User ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Date of Birth</th>
                <th>Address</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@(user.DateOfBirth?.ToShortDateString() ?? "N/A")</td>
                    <td>@user.AddressLine1, @user.AddressLine2, @user.City, @user.Country</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
